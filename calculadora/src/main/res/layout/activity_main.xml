<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.caosaje1.calculadora.MainActivity">

    <LinearLayout style="@style/LayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="35sp"
            android:textColor="@color/black"
            android:id="@+id/eNumero"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <Button style="@style/ButtonStyle"
            android:text="7"
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="8"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="9"
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="+"
            android:id="@+id/bMas"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <Button style="@style/ButtonStyle"
            android:text="4"
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="5"
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="6"
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="-"
            android:id="@+id/bMenos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>

    </LinearLayout>


    <LinearLayout style="@style/LayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <Button style="@style/ButtonStyle"
            android:text="1"
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="2"
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="3"
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="*"
            android:id="@+id/bPor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout style="@style/LayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <Button style="@style/ButtonStyle"
            android:text="."
            android:id="@+id/Punto"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="0"
            android:id="@+id/b0"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="C"
            android:id="@+id/bC"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>
        <Button style="@style/ButtonStyle"
            android:text="/"
            android:id="@+id/bDiv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:layout_margin="2dp"/>

    </LinearLayout>



</LinearLayout>


















